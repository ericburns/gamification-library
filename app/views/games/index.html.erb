<h1>Listing games</h1>

<p><i class="icon-plus-sign"></i> <%= link_to 'New Game', new_game_path %></p>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
<!-- This limits a user to only seeing games they belong to. Admins still see all games -->
<% if @current_user.is_a?(Admin) or String(game.id) == @current_user.game_id %>
  <tr>
    <td><%= game.gamename %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
<% end %>
</table>
